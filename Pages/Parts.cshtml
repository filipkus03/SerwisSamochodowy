@page
@model SerwisMotoryzacyjny.Pages.PartsModel

@{
    ViewData["Title"] = "Parts";
    Layout = "_Layout"; 
}

<h2>Available Parts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <td>@part.Name</td>
                <td>@part.Description</td>
                <td>@part.Price</td>
                <td>@part.Quantity</td>
            </tr>
        }
    </tbody>
</table>
